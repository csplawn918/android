<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/yun.main.ButtonInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="입력" />

    <EditText
        android:id="@+id/yun.main.EditTextInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/yun.main.ButtonInput"
        android:layout_toStartOf="@+id/yun.main.ButtonInput"
        android:ems="10"
        android:inputType="textPersonName" />

    <ScrollView
        android:id="@+id/yun.main.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/yun.main.ButtonInput"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/yun.main.TextViewOutput"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="25dp" />

    </ScrollView>
</RelativeLayout>


