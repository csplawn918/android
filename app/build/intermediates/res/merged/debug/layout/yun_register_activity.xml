<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/yun.register.EditTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="67dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_alignStart="@+id/yun.register.TextViewRegister"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/yun.register.EditTextPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yun.register.EditTextEmail"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/yun.register.EditTextPw2" />

    <EditText
        android:id="@+id/yun.register.EditTextPw2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yun.register.EditTextPw"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/yun.register.EditTextEmail" />

    <TextView
        android:id="@+id/yun.register.TextViewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="회원가입창"
        android:textSize="30dp" />

    <Button
        android:id="@+id/yun.register.ButtonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickBtnregister"
        android:text="회원가입" />

    <TextView
        android:id="@+id/yun.register.TextViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/yun.register.EditTextPw"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:text="이메일:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/yun.register.TextViewPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/yun.register.TextViewEmail"
        android:layout_marginTop="10dp"
        android:text="비밀번호:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/yun.register.TextViewPw2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/yun.register.EditTextPw2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:text="비밀번호확인:"
        android:textSize="20dp" />
</RelativeLayout>

